<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/bg_level" />


    <ImageButton
        android:id="@+id/btn_level_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:src="@drawable/btn_level_easy"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/btn_level_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_level_medium"
        android:layout_below="@+id/btn_level_easy"
        android:layout_alignLeft="@+id/btn_level_easy"
        android:layout_alignStart="@+id/btn_level_easy"
        android:layout_marginTop="10dp" />
    <ImageButton
        android:id="@+id/btn_level_advance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:src="@drawable/btn_level_advance"
        android:layout_below="@+id/btn_level_medium"
        android:layout_alignLeft="@+id/btn_level_medium"
        android:layout_alignStart="@+id/btn_level_medium"
        android:layout_marginTop="10dp" />


    <ImageButton
        android:id="@+id/btn_about_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:src="@drawable/btn_about_close"
        android:layout_below="@+id/btn_level_advance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>