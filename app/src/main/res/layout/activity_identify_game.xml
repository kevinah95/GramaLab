        android:id="@+id/abs_layout"></AbsoluteLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/scrollView"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verb_btn"
                android:background="#00000000"
                android:layout_marginBottom="5dp"
                android:src="@drawable/btn_game_identify_verb"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:id="@+id/adjective_btn"
                android:layout_marginBottom="5dp"
                android:src="@drawable/btn_game_identify_adjective"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:id="@+id/noun_btn"
                android:layout_marginBottom="5dp"
                android:src="@drawable/btn_game_identify_noun"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:id="@+id/article_btn"
                android:src="@drawable/btn_game_identify_article" />

        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:src="@drawable/bg_loading"/>

    </RelativeLayout>


