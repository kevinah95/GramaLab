<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.gramalab.CompleteGameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Corrige la oración!"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="109dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de fallos: 0"
        android:id="@+id/triesTextViewDivide"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewSentence"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerEditTextDivide"
            android:layout_row="1"
            android:layout_column="0"
            android:editable="true"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:text="Palabra" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisar"
        android:id="@+id/checkButtonDivide"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/gridViewSentence"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="checkAnswer" />

</RelativeLayout>
