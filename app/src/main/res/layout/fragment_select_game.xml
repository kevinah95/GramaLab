<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SelectGameFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_select_game" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center_vertical"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_centerHorizontal="true">


            <ImageButton
                android:id="@+id/btn_select_game_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:src="@drawable/btn_select_game_complete"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:id="@+id/btn_select_game_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_select_game_complete"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="#00000000"
                android:src="@drawable/btn_select_game_identify"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_select_game_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_select_game_identify"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="#00000000"
                android:src="@drawable/btn_select_game_order"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_select_game_fractionate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_select_game_order"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="#00000000"
                android:src="@drawable/btn_select_game_fractionate"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btn_select_game_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_select_game_fractionate"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#00000000"
                android:src="@drawable/btn_select_game_correct"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntaje: 0"
        android:id="@+id/triesTextView"
        android:textAlignment="center"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_input_method_navigation_guard" />

</FrameLayout>
